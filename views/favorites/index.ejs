<% include ../partials/header.ejs %>

<!-- embed contents here -->

<div class="container">
  <div class="row">
    <div class="col-md-offsetr-3 col-md-6"></div>
    <h1><%= title %></h1>
    <br />
    <table class="table table-boardered table-striped table-hover">
      <!--Table  Header Row-->
      <tr>
        <th class="text-center">Name</th>
        <th class="text-center">Description</th>
      </tr>
      <!--Repeatable Template Row-->
      <% for(let count =0; count < favoriteList.length; count++)
      {%>
        <tr>
        <td class="text-center"><%= favoriteList[count].name %></td>
        <td class="text-center"><%= favoriteList[count].description %></td>
      </tr>
      <%}%>
    </table>
  </div>
</div>

